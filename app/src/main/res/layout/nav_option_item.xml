<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/navOptionImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:tint = "@color/white"
        android:padding = "10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/navOptionTextView"
        android:paddingLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Featured"
        android:textColor="@color/dark_red"
        android:layout_toRightOf="@id/navOptionImageView"
        android:layout_alignTop="@id/navOptionImageView"
        />
    <TextView
        android:id="@+id/navOptionDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navOptionTextView"
        android:paddingBottom="3dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/navOptionImageView"
        android:paddingLeft="12dp"
        />
</RelativeLayout>