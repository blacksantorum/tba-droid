<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tba.theboxingapp.FightDetailFragment"
    >

    <LinearLayout
        android:id="@+id/fight_detail_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@drawable/abc_menu_dropdown_panel_holo_dark"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/boxerAPickPercentageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35%"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/boxerANameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floyd Mayweather, Jr."
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/weightClassLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Welterweight"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/boxerBPickPercentageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/boxerBNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcos Maidana"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
     </LinearLayout>

    <ListView
        android:id="@+id/comments_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fight_detail_overlay"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
     />

</RelativeLayout>
