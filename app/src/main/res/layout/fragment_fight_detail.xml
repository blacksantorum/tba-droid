<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tba.theboxingapp.FightDetailFragment"
    >

    <LinearLayout
        android:id="@+id/fight_detail_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@drawable/abc_menu_dropdown_panel_holo_dark"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/boxerAPickPercentageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35%"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/boxerANameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floyd Mayweather, Jr."
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/weightClassLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Welterweight"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/boxerBPickPercentageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/boxerBNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcos Maidana"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
     </LinearLayout>

    <ProgressBar
        android:id="@+id/loadCommentsProgress"
        style="@style/Widget.AppCompat.Base.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fight_detail_overlay"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
    </ProgressBar>

    <TextView
        android:id="@+id/loadCommentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadCommentsProgress"
        android:layout_centerInParent="true"
        android:text="Loading comments..."
        android:textColor="@color/gray"
        android:visibility="invisible"
        />

    <LinearLayout
        android:id="@+id/commentsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fight_detail_overlay"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/commentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMENTS"
                />
            <TextView
                android:id="@+id/changeSortLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show new"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/commentsLabel"
                android:textColor="@color/link_blue"
                />
        </RelativeLayout>
        <!--
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        -->
        <EditText
            android:id="@+id/addACommentEditTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a comment"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:focusable="false"
            />
        <!--
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        -->
        <ListView
            android:id="@+id/comments_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
    </LinearLayout>

</RelativeLayout>
